# Database Configuration
# Use SQLite for development (default)
DATABASE_URL=sqlite:///./ai_novel.db
# Or use PostgreSQL for production
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_novel

# AI Provider API Keys
# Get your keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Custom AI Provider (Optional)
CUSTOM_API_URL=https://your-custom-api.com/v1
CUSTOM_API_KEY=your-custom-api-key-here

# CORS Settings
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Application Settings
APP_NAME=AI Novel Platform
DEBUG=true
